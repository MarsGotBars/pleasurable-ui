{% layout './layouts/layout.liquid' %}
{% block head %}
  <link rel="stylesheet" href="/styles/task.css">
{% endblock %}

{% block %}
  <header>
    <nav>
      <a href="">Vandaag</a>
      <a href="">Praten</a>
      <a href="">Inloggen</a>
    </nav>

    <nav>
      <details>
        <summary>
          <h1></h1>
        </summary>
        <ul>
          <li><a href=""></a></li>
        </ul>
      </details>
    </nav>
    {% comment %} <progress></progress> {% endcomment %}

    <picture>
      <source>
      <source>
      <img src="" alt="">
    </picture>
    <h2>Rouwstappen van de dag</h2>
    <p>3 oefeningen open voor vandaag</p>
  </header>

  <main>
    {% for excercise in task.exercise %}
      <article>
        <div class="container-card">
          <picture>
            <source type="image/avif" srcset="https://fdnd-agency.directus.app/assets/{{ excercise.image.filename_disk }}?format=avif">
            <source type="image/webp" srcset="https://fdnd-agency.directus.app/assets/{{ excercise.image.filename_disk }}?format=webp">
            <img
              src="https://fdnd-agency.directus.app/assets/{{ excercise.image.filename_disk }}"
              width="{{ excercise.image.width }}"
              height="{{ excercise.image.height }}"
              alt=""
              class="exercise-img"
              fetchpriority="high">
          </picture>

          <div class="bottom-grid">
            <h3>{{ excercise.title }}</h3>
            <a class="btn" href="/community-drops/{{excercise.id}}"><img
                src="../assets/community-drops.png"
                height="15"
                width="36"
                alt="">{{ messagesLength }} community drops</a>
            <a class="start-btn" href="/exercise/{{excercise.id}}">start oefening</a>
            <div class="flex-container">
              <p class="btn">
                {% render './partials/icons/clock.liquid' %}
                {{ excercise.duration }} min</p>
              <p class="btn">
                {% render './partials/icons/clock.liquid' %}
                3 tips</p>
            </div>
          </div>
        </div>
      </article>
    {% else %}
      <p>Er zijn geen openstaande opdrachten meer!</p>
    {% endfor %}
  </main>

{% endblock %}